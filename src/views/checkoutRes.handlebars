<div class="h-lvh mx-auto max-w-2xl px-4 py-10 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8 bg-gray-100">
    <div class="text-center">
        <h1 class="text-2xl font-bold text-gray-900">La compra se realizó con éxito!!</h1>
    </div>
    <hr class="my-4" />
    <div class="mx-auto max-w-5xl justify-center px-6 md:flex md:space-x-6 xl:px-0">
        <div class="rounded-lg md:w-2/3">
            <h1 class=" text-xl font-bold mb-2">Lista de los productos que no se pudieron comprar, verifica su stock!
            </h1>
            {{#each noStockProducts}}
            <div class="justify-between mb-6 rounded-lg bg-white p-6 shadow-md sm:flex sm:justify-start">
                <div class="sm:ml-4 sm:flex sm:w-full sm:justify-between">
                    <div class="mt-5 sm:mt-0">
                        <h2 class="text-lg font-bold text-gray-900">{{this.product.title}}</h2>
                        <h3 class="text-sm font-bold text-gray-900">Stock: {{this.product.stock}}</h3>
                        <h4 class="text-sm font-bold text-gray-900">Cantidad en carrito: {{this.quantity}}</h4>
                    </div>
                    <div class="mt-4 flex justify-between sm:space-y-6 sm:mt-0 sm:block sm:space-x-6">
                        <div class="flex items-center space-x-4">
                            <p class="text-sm">{{this.product.price}} $</p>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                stroke="currentColor" class="h-5 w-5 cursor-pointer duration-150 hover:text-red-500">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <!-- Sub total -->
        <div class="mt-6 h-full rounded-lg border bg-white p-6 shadow-md md:mt-0 md:w-1/3">
            <p class="text-gray-700">Ticket de compra: {{purchaseCode}}</p>
            <p class="text-gray-700">Comprador: {{purchaseBuyer}}</p>
            <hr class="my-4" />
            <div class="flex justify-between">
                <p class="text-lg font-bold">Total</p>
                <div class="">
                    <p class="mb-1 text-lg font-bold">${{purchaseAmount}} USD</p>
                    <p class="text-sm text-gray-700">IVA incl.</p>
                </div>
            </div>
            <p>{{message}}</p>
        </div>

    </div>
    <a href="http://localhost:8080/"><button
            class="sm:w-full lg:w-auto my-2 border rounded md py-4 px-8 text-center bg-indigo-600 text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-700 focus:ring-opacity-50">Volver
            al inicio</button>
    </a>
</div>